{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "types/**"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "lint": {},
    "test": {
      "cache": false
    },
    "test-coverage": {
      "outputs": ["coverage/**"]
    },
    "format": {},
    "check-format": {},
    "clean": {
      "cache": false
    },
    "clean-dist": {
      "cache": false
    }
  }
}
