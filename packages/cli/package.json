{
  "name": "@mlaursen/cli",
  "type": "module",
  "version": "0.1.0",
  "description": "A small util to copy SCSS files for publishing.",
  "bin": {
    "mlaursen-cli": "./dist/cli.mjs"
  },
  "scripts": {
    "prepare": "pnpm build",
    "clean-dist": "rm -rf dist types",
    "clean-cache": "rm -rf .turbo node_modules",
    "clean": "concurrently 'pnpm clean-dist' 'pnpm clean-cache'",
    "check-format": "prettier --check .",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint-fix": "pnpm lint --fix",
    "typecheck": "tsc --noEmit",
    "typecheck-watch": "pnpm typecheck --watch",
    "build-dist": "rollup -c rollup.config.ts",
    "build-dist-watch": "pnpm build-dist --watch",
    "build": "pnpm build-dist",
    "dev": "pnpm build-dist-watch"
  },
  "dependencies": {
    "@mlaursen/copy-scss-files": "workspace:*",
    "chokidar": "^5.0.0",
    "glob": "^13.0.0"
  },
  "devDependencies": {
    "@mlaursen/eslint-config": "workspace:*",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "@types/node": "^25.0.9",
    "commander": "^14.0.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "prettier": "^3.8.0",
    "rollup": "^4.55.2",
    "rollup-plugin-swc3": "^0.12.1",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "volta": {
    "node": "24.12.0",
    "pnpm": "10.26.1"
  }
}
