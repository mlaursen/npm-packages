{
  "name": "@mlaursen/code",
  "type": "module",
  "version": "0.0.1",
  "description": "Components and utils for rendering code for documentation pages or in general",
  "exports": {
    ".": {
      "sass": "./dist/_code.scss"
    },
    "./shiki/HighlightedCodeBlock": {
      "react-server": {
        "types": "./dist/shiki/HightlightedCodeBlock.server.d.ts",
        "default": "./dist/shiki/HighlightedCodeBlock.server.js"
      },
      "default": {
        "types": "./dist/shiki/HighlightedCodeBlock.client.d.ts",
        "default": "./dist/shiki/HighlightedCodeBlock.client.js"
      }
    },
    "./shiki/HightlightedCodeBlock.client": null,
    "./shiki/HightlightedCodeBlock.server": null,
    "./shiki/useCodeHighlight": {
      "react-server": "./dist/shiki/useCodeHighlight.server.js",
      "default": {
        "types": "./dist/shiki/useCodeHighlight.client.d.ts",
        "default": "./dist/shiki/useCodeHighlight.client.js"
      }
    },
    "./*": "./dist/*.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "clean-dist": "rm -rf dist",
    "clean-cache": "rm -rf .turbo node_modules",
    "clean": "concurrently 'pnpm clean-dist' 'pnpm clean-cache'",
    "check-format": "prettier --check .",
    "format": "prettier --write .",
    "lint": "NODE_ENV=production eslint .",
    "lint-fix": "pnpm lint --fix",
    "typecheck": "tsc --noEmit",
    "typecheck-watch": "pnpm typecheck --watch",
    "build-esm": "swc -d ./dist --strip-leading-paths src",
    "build-esm-watch": "pnpm build-esm --watch",
    "build-types": "tsc -P tsconfig.types.json",
    "build-types-watch": "pnpm build-types --watch",
    "build-scss": "mlaursen-cli copy-scss-files",
    "build-scss-watch": "mlaursen-cli copy-scss-files --watch",
    "build": "concurrently 'pnpm build-esm' 'pnpm build-types' 'pnpm build-scss'",
    "test": "vitest",
    "test-coverage": "vitest --coverage",
    "test-run": "vitest run",
    "test-run-snapshot": "vitest run -u",
    "test-run-coverage": "vitest run --coverage",
    "dev": "concurrently 'pnpm build-esm-watch' 'pnpm build-types-watch' 'pnpm build-scss-watch'"
  },
  "author": "Mikkel Laursen <mlaursen03@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mlaursen/npm-packages.git",
    "directory": "packages/code"
  },
  "bugs": {
    "url": "https://github.com/mlaursen/npm-packages/issues"
  },
  "keywords": [
    "eslint",
    "typescript"
  ],
  "license": "MIT",
  "devDependencies": {
    "@mlaursen/cli": "workspace:*",
    "@mlaursen/eslint-config": "workspace:*",
    "@react-md/core": "^6.5.0",
    "@shikijs/langs": "^3.20.0",
    "@shikijs/themes": "^3.20.0",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.7",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "cnbuilder": "^3.1.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "jsdom": "^27.3.0",
    "prettier": "^3.7.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "shiki": "^3.20.0",
    "sucrase": "^3.35.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "@react-md/core": ">= 6",
    "cnbuilder": ">= 3",
    "react": ">= 18",
    "sucrase": ">= 3"
  },
  "peerDependenciesMeta": {
    "@react-md/core": {
      "optional": true
    },
    "cnbuilder": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "sucrase": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "volta": {
    "node": "24.11.0",
    "pnpm": "10.20.0"
  },
  "dependencies": {
    "hast-util-to-jsx-runtime": "^2.3.6"
  }
}
